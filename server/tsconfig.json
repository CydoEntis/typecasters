{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"allowJs": true,
		"paths": {
			"shared/*": [
				"../packages/shared/src/*" // Alias for shared package
			]
		}
	},
	"include": [
		"src/**/*",
		"../packages/shared/src/**/*" // Include shared package files
	],
	"exclude": [
		"node_modules"
	]
}